<% if @event.errors.any? %>
  <div class="alert alert-danger">
    <h4>Please correct these errors:</h4>
    <ul>
      <% @event.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>
<div>
  <%= render '/events/form' %>
</div>

<div>
<h2>All Upcoming Chicktech Events</h2>
  <% if @events %>
    <% @events.each do |event| %>
      <%= render event %> 
    <% end %>  
  <% end %>
</div>
