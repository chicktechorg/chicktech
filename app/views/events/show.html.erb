

<div id="page-content-wrapper">
  <div class="page-content inset">
    <div class="row">
      <div class="col-md-10">
        <div class="event-info well">
          <h2 class='section-header'><% provide :title, "#{@event.name}" %></h2>
          <%= render @event %>
          <% if can? :update, @event %>
            <%= link_to "Add jobs", new_job_path(:job => { workable_id: @event.id, workable_type: 'Event' }) %>
            <%= link_to "Add a team", new_team_path(:team => { event_id: @event.id }) %>
          <% end %>
          <% if @event.leadership_role.available? %>
            <%= form_for @event.leadership_role do |f| %>
              <%= f.hidden_field :signing_up, :value => true %>
              <%= f.submit "Take the lead!", :class => "submit-no-button" %>
            <% end %>
          <% elsif can? :update, @event.leadership_role %>
            <%= link_to (@event.leadership_role.owned_by?(current_user) ? "Resign" : "Unassign"), leadership_role_path(@event.leadership_role, :leadership_role => {:resigning => false}), :method => :patch, :class => "remove" %>
          <% end %>
          <% if @event.leader %>
            <h4>Event lead: <%= "#{@event.leader.first_name} #{@event.leader.last_name}" %></h4>
          <% end %>
         <% if @event.teams.any? %>
          <div style="height: 240px; padding-top: 1.2rem">
          <div class="window">
          <input type="checkbox" id="punch" class="toggle">
            <label for="punch">Teams</label>
            <div>
              <% @event.teams.each do |team| %>
                <%= render team %>
                <% if @event.jobs.any? %>
                <% end %>
              <% end %>
            </div>
          </div>
          </div>

          <div style="height: 240px; padding-top: 1.2rem">
            <div class="window">
              <input type="checkbox" id="punch2" class="toggle">
                <label for="punch2">Jobs for this event</label>
                  <div>
                    <% @event.jobs.each do |job| %>
                      <%= render job %>
                      <% end %>
                    <% end %>
                  </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
