<div class="col-md-11">
  <h2>All Events</h2>

  <%= form_tag events_path, :method => :get do %>
    <%= collection_select :city, :id, City.all, :id, :name %>
    <%= submit_tag 'Filter' %>
  <% end %>

  <div id="events-calendar">
    <h2 id="month">
      <%= link_to "<", date: @date.prev_month %>
      <%= @date.strftime("%B %Y") %>
      <%= link_to ">", date: @date.next_month %>
    </h2>
    <%= calendar @date do |date| %>
      <%= date.day %>
      <% if @events_by_date[date] %>
        <ul>
          <% @events_by_date[date].each do |event| %>
            <li><%= link_to event.name, event %></li>
          <% end %>
        </ul>
      <% end %>
    <% end %>
  </div>

  <div class="events-responsive", id="events-table">
    <table class="table">
      <thead>
        <tr>
          <th>Name</th>
          <th>City</th>
          <th>Start</th>
          <th>Event leader</th>
          <th>Teams</th>
          <th>Jobs</th>
          <th>Volunteers</th>
        </tr>
      </thead>
      <tbody>
        <% @events.each do |event| %>
        <tr>
          <td><%= link_to event.name, event_path(event) %></td>
          <td><%= event.city.name %></td>
          <td><%= event.start.strftime("%b %-d, %Y @ %-I:%M%P") %></td>
          <td><%= event.leader ?  link_to(event.leader.first_name, user_path(event.leader)) : "Take the lead" %></td>
          <td class="table-teams">
            <%= "#{event.teams.with_leaders.count}/#{event.teams.count}" %>
          </td>
          <td class="table-jobs">
            <%= "#{event.jobs.with_volunteers.count}/#{event.jobs.count}" %>
          </td>
          <td></td>
          </tr>
       <% end %>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md-8">
      <h2>Upcoming events in 24hrs</h2>
      <table class="table">
        <thead>
          <tr>
            <th>Name</th>
            <th>City</th>
            <th>Start</th>
            <th>Event leader</th>
            <th>Teams</th>
            <th>Jobs</th>
            <th>Volunteers</th>
          </tr>
        </thead>
      </table>
    </div>
  </div>
</div>
