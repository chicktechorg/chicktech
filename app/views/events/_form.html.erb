<%= form_for @event do |f| %>

  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>

  <div class="form-group">
    <%= f.label :city %></br>
    <%= f.collection_select(:city_id, City.all, :id, :name)%>
  </div>

  <div class="form-group">
    <%= f.label :start %>
    <%= f.text_field :start, :class => 'form_datetime form-control-short datetimepicker'%>
  </div>
  <div class="form-group">
    <%= f.label :finish %>
    <%= f.text_field :finish, :class => 'form_datetime form-control-short datetimepicker' %>
  </div>
  <%= f.fields_for :leadership_role, @leadership_role do |ff| %>
    <%= ff.hidden_field :name %>
    <%= ff.hidden_field :leadable_id %>
    <%= ff.hidden_field :leadable_type %>
  <% end %>

  <div class="form-group">
    <%= f.label :template %></br>
    <%= f.collection_select(:template_id, Event.where(:template => true), :id, :name, {prompt: "None"} )%>
  </div>
  <%= f.submit :class => 'create-button' %>
<% end %>
<script>jQuery('.datetimepicker').datetimepicker();</script>

