<%= form_for @event do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :start %>
    <%= f.datetime_select :start, ampm: true, prompt: {day: 'Day', month: 'Month'}, start_year: Time.now.year %>
  </div>
  <div class="form-group">
    <%= f.label :finish %>
    <%= f.datetime_select :finish, ampm: true, prompt: {day: 'Day', month: 'Month'}, start_year: Time.now.year %>
  </div>
  <%= f.submit :class => 'btn btn-primary' %>
<% end %>