<%= form_for @event do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group"> 
    <%= f.label :city %>
    <%= f.collection_select(:city_id, City.all, :id, :name)%>
  </div>
  <div class="form-group">
    <%= f.label :start %>
    <%= f.text_field :start, :class => 'form_datetime' %>
  </div>
  <div class="form-group">
    <%= f.label :finish %>
    <%= f.text_field :finish, :class => 'form_datetime' %>
  </div>
  <%= f.fields_for :leadership_role, @leadership_role do |ff| %>
    <%= ff.hidden_field :name %>
    <%= ff.hidden_field :leadable_id %>
    <%= ff.hidden_field :leadable_type %>
  <% end %>
  <%= f.submit :class => 'create-button' %>
<% end %>
