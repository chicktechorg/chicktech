<% if @task.done? %>
  var $task = $('#<%= "edit_task_" + @task.id.to_s %>')
  var $taskGroup = $task.parents(".task-group");
  $taskGroup.find('.done-task-list').append($task);
  $task.submitOnCheck();
<% else %>
  var $task = $('#<%= "edit_task_" + @task.id.to_s %>')
  var $taskGroup = $task.parents(".task-group");
  $('#<%= "edit_task_" + @task.id.to_s %>').parent().remove();
  $taskGroup.find('.not-done-task-list').append($task);
  $task.submitOnCheck();
<% end %>
