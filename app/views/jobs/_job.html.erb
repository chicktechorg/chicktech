<div class="job-descriptions">
  <h4>Job Title: <%= link_to job.name, job_path(job) %></h4>
  <% if job.taken? %>
    <div>Taken by: <%= job.user.first_name %> <%= job.user.last_name %></div>
  <% else %>
    <%= form_for job do |f| %>
      <%= f.hidden_field :signing_up, :value => true %>
      <%= f.submit "Sign Up!", :method => :patch, :class => "submit-no-button" %>
    <% end %>
  <% end %>
  <% if can?(:update, job) %>
    <%= form_for job do |f| %>
      <%= f.hidden_field :resigning, :value => true %>
      <%= f.submit (job.owned_by?(current_user) ? "Resign!" : "Unassign"), :method => :patch, :class => "submit-no-button" %>
    <% end %>
  <% end %>

  <p> Description: <%= job.description %></p>

  <% if job.try(:due_date) %>
    <p>Due Date: <%= job.due_date.to_time.strftime("%b %-d, %Y @ %-I:%M%P") %></p>
  <% end %>


  <% if can? :manage, job %>
    <%= link_to "Delete", job_path(job), :method => :delete, :data => { :confirm => 'Are you sure?' } %>
    <%= link_to "Edit", edit_job_path(job) %>
    <%= form_for job do |f| %>
      <%= f.hidden_field :job_done, :value => true %>
      <% if job.done %>
      <p> This job is: <%= f.submit "Not Done", :method => :patch, :class => "sign-in-button-small" %></p>
        
      <% else %>
        <p> This job is: <%= f.submit "Done", :method => :patch, :class => "sign-in-button-small" %><p>
      <% end %>
    <% end %>
  <% end %>  
</div>
