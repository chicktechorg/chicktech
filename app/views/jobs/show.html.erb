<div id="page-content-wrapper">
  <div class="page-content inset">
    <div class="row">
      <div class="col-md-6">
        <div class="event-info well">
          <h2 class='section-header'><% provide :title, "#{@job.name}" %></h2>

          <% if @task.errors.any? %>
            <div class="alert alert-danger">
              <h4>Please correct these errors:</h4>
              <ul>
                <% @task.errors.full_messages.each do |message| %>
                  <li><%= message %></li>
                <% end %>
              </ul>
            </div>
          <% end %>

          <%= render @job %>

          <%= link_to 'Edit', edit_job_path(@job) %> |
             <%= link_to 'Delete', job_path(@job),
                                   method: :delete,
                                   :data => { :confirm => 'Are you sure? This will delete all
                                                           jobs within this team' } %>

        </div>
        <div class="comment-section well-event">
          <p> Comments about this job: </p>
            <% if @job.comments.any? %>
              <% @job.comments.each do |comment| %>
                <%= render comment %>
              <% end %>
            <% else %>
              <p>No comments yet. Add some notes!</p>
            <% end %>
            <%= render 'comments/form' %>
          </div>
          <p><%= link_to "Back to event", event_path(@job.workable) %></p>
      </div>
      <div class="col-md-6 cities well">
        <div class="form-group">
          <%= render 'jobs/new_task_form' %>
        </div>
      </div>
    </div>
  </div>
</div>

