<div>Taken by: <%= @job.user.first_name %> <%= @job.user.last_name %></div>
<%= form_for @job do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <% if @job.workable_id %>
    <%= f.hidden_field :workable_id %>
    <%= f.hidden_field :workable_type %>
  <% else %>  
    <div class="form-group">
      <%= f.label :event %>
      <%= f.collection_select(:event_id, Event.upcoming, :id, :name) %>
    </div>
  <% end %>
  <%= f.submit :class => "create-button" %>
<% end %>

<% if @job.taken? %>
  <%= form_for @job do |f| %>
    <%= f.hidden_field :unassigning, :value => true %>
    <%= f.submit "Unassign volunteer from job", :method => :patch, :class => "submit-no-button" %>
  <% end %>
<% end %>