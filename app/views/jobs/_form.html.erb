<%= form_for @job do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :due_date %>
    <%= f.text_field :due_date, :class => 'input-append date' %>
  </div>
  <% if @job.workable_id %>
    <%= f.hidden_field :workable_id %>
    <%= f.hidden_field :workable_type %>
  <% else %>  
    <div class="form-group">
      <%= f.label :event %>
      <%= f.collection_select(:event_id, Event.upcoming, :id, :name) %>
    </div>
  <% end %>
  <%= f.submit :class => "create-button" %>
<% end %>
