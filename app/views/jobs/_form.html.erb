<%= form_for @job do |f| %>
  <div class="form-group">
    <%= f.label :name %>
    <%= f.text_field :name, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :description %>
    <%= f.text_area :description, :class => 'form-control' %>
  </div>
  <div class="form-group">
    <%= f.label :event %>
    <%= f.collection_select(:event_id, Event.upcoming, :id, :name) %>
  </div>
  <%= f.submit :class => "btn btn-success" %>
<% end %>