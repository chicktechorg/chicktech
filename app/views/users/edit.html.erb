<h2>Please enter your information</h2>

<%= form_for(@user) do |f| %>

  <div>
    <%= f.label :first_name %>
    <%= f.text_field :first_name, :autofocus => true %>
  </div>

  <div>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </div>

  <div>
    <%= f.label :phone %>
    <%= f.text_field :phone %>
  </div>

  <div>
    <%= f.label :email %>
    <%= f.email_field :email %>
  </div>

  <div>
    <%= f.submit "Update" %>
  </div>
<% end %>

<%= link_to "Back", :back %>
